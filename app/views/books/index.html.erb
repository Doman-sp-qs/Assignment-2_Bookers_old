<!--サクセスメッセージ-->
<p class="success-message">
  <%= flash[:notice] %>
</p>

<!--投稿一覧-->
<h1>
  Books
</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <a><%= link_to "Show", book_path(book.id) %></a>
      </td>
      <td>
        <a><%= link_to "Edit", edit_book_path(book.id) %></a>
      </td>
      <td>
        <a>
          <%= link_to "Destroy", book_path(book.id),method: :delete, "data-confirm" => "Are you sure?" %>
        </a>
      </td>
    </tr>
  <% end %>
  
</table>

<!--新規投稿機能-->
<h2>New book</h2>

<% if @book.errors.any? %>
  
  <section class="errors-box">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
  
<% end %>

<%= form_with model: @book, url: 'books', method: :post do |f| %>
  
  <div class="input-field">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  
  <div class="input-field">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  <div class="btn">
    <%= f.submit 'Create Book' %>
  </div>
  
  
<% end %>

